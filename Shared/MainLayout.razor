@inherits LayoutComponentBase

<MudThemeProvider Theme="myTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout >
    <MudAppBar Elevation="0" Class="resize padding-sides">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Size="Size.Medium" Color="Color.Inherit" 
                       Edge="Edge.Start" OnClick="@(((e) => DrawerToggle()))" Class="margin-left" />
       <MudSpacer />
       <AccessControl></AccessControl>
       
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Class="mud-drawer" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">NutrifoodsFrontend</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<style>
    @@media screen and (max-width: 600px) {
        .resize{
            background-size: auto;
           
        }
        .mud-drawer{
            font-size: larger;
        }
    }
   .padding-sides{
        padding-left: 10%;
        padding-right: 10%;
   }
</style>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private MudTheme myTheme = new()
        {
            Palette = new Palette
            {
                Primary = "#35A14B",
                Secondary = "#B0B006",
                Tertiary = "#5B06B0",
                Info = "#928B8B",
                Success = "#2ECC40",
                Warning = "#FF851B",
                Error = "#F012BE",
                AppbarBackground = "#35A14B",
                DarkLighten = "#545252",
                Background = "#f9f9f9"

            }
        };
}